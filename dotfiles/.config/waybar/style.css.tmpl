/* ------------------------------------------------- */
/* color palette for Waybar (populated via envsubst) */
/* ------------------------------------------------- */

/* Special */
@define-color fg       ${FG};
@define-color bg       ${BG};
@define-color cursor   ${FG};
@define-color bg-argb  ${BG_ARGB};


/* Normal */
@define-color black    ${BLACK};
@define-color red      ${RED};
@define-color green    ${GREEN};
@define-color yellow   ${YELLOW};
@define-color blue     ${BLUE};
@define-color magenta  ${MAGENTA};
@define-color cyan     ${CYAN};
@define-color white    ${WHITE};

/* Bright Variants (_br) */
@define-color black-br ${BLACK_BR};
@define-color red-br   ${RED_BR};
@define-color green-br ${GREEN_BR};
@define-color yellow-br ${YELLOW_BR};
@define-color blue-br  ${BLUE_BR};
@define-color magenta-br ${MAGENTA_BR};
@define-color cyan-br  ${CYAN_BR};
@define-color white-br ${WHITE_BR};

/* Border Alias */
@define-color bd0       ${BORDER0};
@define-color bd1       ${BORDER1};

/* ----------------------------------------------------- */
/* General Styles                                        */
/* ----------------------------------------------------- */
* {
    color: @fg;
    border: 0;
    border-radius: 0;
    background-color: transparent;
}

window#waybar {
    font-family: "NotoSans Nerd Font";
    background-color: @bg-argb;
    transition: background-color 2s;
    border: ${BDTHK}px solid @bg;
    border-radius: 0 0 ${BDRAD}px ${BDRAD}px;
}

#pulseaudio:hover {
    background-color: @magenta;
}

/* ----------------------------------------------------- */
/* Workspaces                                            */
/* ----------------------------------------------------- */
#workspaces {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 20pt;
}

#workspaces button {
    color: @fg;
    padding: 0 6pt;
    transition: all 0.5s ease-in-out;
    background-color: transparent;
}

#workspaces button.special {
    background-color: @blue;
}

#workspaces button.special.active {
    background-color: @red;
}

#workspaces button.active {
    background-color: @white;
}

#workspaces button:hover {
    background: @black-br;
}

#workspaces button:first-child {
    border-radius: 0 0 0 8px;
}

#mode {
    background-color: #64727D;
    box-shadow: inset 0 -3px #ffffff;
}

/* ----------------------------------------------------- */
/* Window                                                */
/* ----------------------------------------------------- */
#window {
    background: transparent;
    border: ${BDTHK}px solid transparent;
    border-radius: ${BDRAD}px;
    color: @fg;
    font-family: "NotoSans Nerd Font";
    font-size: 11pt;
    font-weight: normal;
    opacity: ${OPAC1};
    padding: 0 12px;
}

window#waybar.empty #window {
    background-color: transparent;
    color: transparent;
}

/* ----------------------------------------------------- */
/* Taskbar                                               */
/* ----------------------------------------------------- */
#taskbar {
    background: transparent;
    margin: 0;
    padding: 0 10px;
    border-radius: 0;
    font-weight: normal;
    opacity: ${OPAC1};
}

#taskbar button {
    margin: 0;
    padding: 0 5px;
}

#taskbar button.active {
    color: @blue;
}

#taskbar.empty {
    background: transparent;
    border: 0;
    padding: 0;
    margin: 0;
}

/* ----------------------------------------------------- */
/* Module Spacing                                        */
/* ----------------------------------------------------- */
#modules-left .module,
#modules-center .module,
#modules-right .module {
    margin: 0;
}

.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

/* Common Module Padding */
#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#scratchpad,
#power-profiles-daemon,
#mpd {
    padding: 0 6pt;
}

/* ----------------------------------------------------- */
/* Hardware Group                                        */
/* ----------------------------------------------------- */
#pulseaudio,
#temperature,
#disk,
#memory,
#cpu,
#language,
#backlight,
#network {
    margin: 0 4px;
    padding: 0;
    font-size: 10pt;
}

/* ----------------------------------------------------- */
/* Battery Styles                                        */
/* ----------------------------------------------------- */
#battery {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 16pt;
}

#battery.full {
    background-color: @bd0;
}

@keyframes blink {
    to { color: rgba(0, 0, 0, 0); }
}

#battery.critical:not(.charging) {
    animation: blink 0.5s steps(12) infinite alternate;
}

/* ----------------------------------------------------- */
/* Power Profiles                                        */
/* ----------------------------------------------------- */
#power-profiles-daemon {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 20pt;
}

/* ----------------------------------------------------- */
/* Network                                               */
/* ----------------------------------------------------- */
#network {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 20pt;
    padding-left: 6pt;
}

/* Custom Power Button                                   */
#custom-power {
    font-weight: bold;
    font-size: 12pt;
}

