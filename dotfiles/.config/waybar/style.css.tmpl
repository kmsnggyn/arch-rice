
/* ============================================================== */
/*                   Waybar Style (Template)                     */
/* ============================================================== */

/* ----------------------------------------------------- */
/* Color Palette (populated via envsubst)                */
/* ----------------------------------------------------- */
/* Special */
@define-color fg        ${FG};
@define-color bg        ${BG};
@define-color cursor    ${FG};

/* Normal */
@define-color black     ${BLACK};
@define-color red       ${RED};
@define-color green     ${GREEN};
@define-color yellow    ${YELLOW};
@define-color blue      ${BLUE};
@define-color magenta   ${MAGENTA};
@define-color cyan      ${CYAN};
@define-color white     ${WHITE};

/* Bright Variants (_br) */
@define-color black-br  ${BLACK_BR};
@define-color red-br    ${RED_BR};
@define-color green-br  ${GREEN_BR};
@define-color yellow-br ${YELLOW_BR};
@define-color blue-br   ${BLUE_BR};
@define-color magenta-br ${MAGENTA_BR};
@define-color cyan-br   ${CYAN_BR};
@define-color white-br  ${WHITE_BR};

/* Border Colors */
@define-color bd0       ${BORDER0};
@define-color bd1       ${BORDER1};

/* ----------------------------------------------------- */
/* Global Styles                                         */
/* ----------------------------------------------------- */
* {
    border: none;
    background: transparent;
    text-shadow: none;
}

window#waybar {
    font-family: "NotoSansM Nerd Font";
    background: @bg;
    opacity: ${OPAC1};
    border-bottom: ${BDTHK}px solid @bd1;
    border-left:   ${BDTHK}px solid @bd1;
    border-right:  ${BDTHK}px solid @bd1;
    border-radius: 0 0 ${BDRAD}px ${BDRAD}px;
}

/* ----------------------------------------------------- */
/* Workspaces                                            */
/* ----------------------------------------------------- */
#workspaces { 
    font-family: "NotoSansM Nerd Font";
    font-size: 16pt;
}

#workspaces button {
    background: transparent;
    border-bottom: ${BDTHK}px solid @bd1;
    border-radius: 0;
    padding: 0 10pt 0 6pt;
}

#workspaces button.special              { background: @blue;  }
#workspaces button.special.active       { background: @red;   }
#workspaces button.active               { background: @white; }

#workspaces button:hover,
#workspaces button.active:hover,
#workspaces button.special:hover,
#workspaces button.special.active:hover {
    background: @black-br;
}

#workspaces button:first-child {
    border-left:   ${BDTHK}px solid @bd1;
    border-bottom: ${BDTHK}px solid @bd1;
    border-radius: 0 0 0 ${BDRAD};
    padding: 0 10pt 0 4pt;
}

/* ----------------------------------------------------- */
/* Taskbar                                               */
/* ----------------------------------------------------- */
#taskbar {
    background: transparent;
    font-family: "NotoSansM Nerd Font";
    font-size: 11pt;
    letter-spacing: -1px;
    margin: 0;
    opacity: ${OPAC1};
    padding: 0 10px;
}

#taskbar button {
    background: transparent;
    border-bottom: 2px solid transparent;
    border-radius: 0;
    margin: 0;
    padding: 0 5px;
    transition: background 0.2s ease-in-out;
}

#taskbar button.active              { color: @blue; }
#taskbar button:hover,
#taskbar button.active:hover        { color: @blue-br; }

#taskbar.empty {
    background: transparent;
    border: none;
    margin: 0;
    padding: 0;
}

/* 1. Style the pressed/dragging state via the :active pseudo-class */
#taskbar button:active {
  /* e.g. bright yellow background when you click & drag */
  background-color: @yellow;
  color: @black;
}

/* 2. If Waybar adds a 'dragging' class on buttons during a drag, you can style it too */
#taskbar button.dragging {
  /* e.g. a dashed red border around the dragged item */
  border: 2px dashed @red;
}

/* 3. Smooth transition so the style change isnâ€™t jarring */
#taskbar button {
  transition: background-color 0.2s ease-in-out,
              border       0.2s ease-in-out;
}




/* ----------------------------------------------------- */
/* Common Modules Spacing & Padding                     */
/* ----------------------------------------------------- */
#modules-left .module,
#modules-center .module,
#modules-right .module {
    margin: 0;
}

.modules-left > widget:first-child > #workspaces,
.modules-right > widget:last-child > #workspaces {
    margin: 0;
}

#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#custom-media,
#tray,
#mode,
#idle_inhibitor,
#scratchpad,
#power-profiles-daemon,
#mpd {
    padding: 0 6pt;
}

/* Hardware Modules */
#battery,
#cpu,
#disk,
#memory,
#network,
#temperature,
#backlight,
#pulseaudio,
#wireplumber,
#language {
    font-size: 10pt;
    margin: 0 4px;
    padding: 0;
}

/* ----------------------------------------------------- */
/* Pulseaudio Hover                                       */
/* ----------------------------------------------------- */
#pulseaudio:hover {
    background: @magenta;
}

/* ----------------------------------------------------- */
/* Battery Styles                                        */
/* ----------------------------------------------------- */
#battery {
    font-family: "NotoSansM Nerd Font";
    font-size: 16pt;
}

#battery.full {
    background: @bd0;
}

@keyframes blink {
    to { color: rgba(0, 0, 0, 0); }
}

#battery.critical:not(.charging) {
    animation: blink 0.5s steps(12) infinite alternate;
}



/* ----------------------------------------------------- */
/* Power Profiles                                       */
/* ----------------------------------------------------- */
#power-profiles-daemon {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 20pt;
}

/* ----------------------------------------------------- */
/* Network Module                                        */
/* ----------------------------------------------------- */
#network {
    font-family: "NotoSansM Nerd Font Mono";
    font-size: 20pt;
    padding-left: 6pt;
}

/* ----------------------------------------------------- */
/* Custom Power Button                                   */
/* ----------------------------------------------------- */
#custom-power {
    font-size: 12pt;
    font-weight: bold;
}
