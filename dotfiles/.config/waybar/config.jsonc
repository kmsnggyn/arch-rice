    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•", "hands-free": "Ôñê", "default": ["ÔÄ¶","ÔÄß","ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },

  "battery": {                            // battery indicator
    "interval": 30,
    "states": { "warning": 30, "critical": 15 },
    "format": "{icon} {capacity}%",
    "format-icons": [
      "Û∞Å∫","Û∞Åª","Û∞Åº","Û∞ÅΩ","Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û±àè"
    ]
  },

  "power-profiles-daemon": {              // power profiles
    "format": "{icon}",
    "tooltip-format": "Power: {profile} (Driver: {driver})",
    "tooltip": true,
    "format-icons": {
      "performance": "Û∞°¥", "balanced": "Û∞äö", "power-saver": "Û∞°≥", "default": "ÔÉß"
    }
  },

  // =================== Custom Modules ============================
  "custom/power": {                       // power menu
    "format": "‚èª",                    
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
  },

  "wlr/taskbar": {                        // Wayland taskbar
    "format": "{name}",
    "icon-size": 14,
    "icon-theme": "Papirus",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-right": "close",
    "ignore-list": [],
    "rewrite": { "Zen Browser": "Zen", "Foot Server": "Terminal" }
  }
}

