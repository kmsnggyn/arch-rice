{
  // ==================== Outputs & Appearance ====================
  "output": ["eDP-1", "DP-3"],          // display interfaces
  "layer": "top",                        // Waybar at top layer
  "position": "top",                    // top | bottom | left | right
  "height": 36,                     // bar height (px)
  "width": 1904,                      // bar width (px)
  "margin-top": 0,                        // top margin (px)
  "spacing": 2,                           // spacing between modules (px)

  // ======================= Module Order =========================
  "modules-left": [                       // left-aligned modules
    "hyprland/workspaces",
    "hyprland/submap",
    // "custom/media",
    "wlr/taskbar"
  ],

  "modules-center": [                     // center-aligned modules
//    "hyprland/window",
    "clock"
  ],

  "modules-right": [                      // right-aligned modules
    // "idle_inhibitor",
    "pulseaudio",
    "cpu",
    // "temperature",
    "memory",
    "backlight",
    // "keyboard-state",
    "hyprland/language",
    "network",
    "power-profiles-daemon",
    "battery"
    // "tray",
//    "custom/power"
  ],

  // ====================== Module Configs =========================

  "hyprland/workspaces": {                // workspace indicators
    "active-only": false,
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "show-special": true,
    "special-visible-only": true,
    "format": "{icon}",
    "format-icons": {
      "1": "Óª≠", "2": "Û∞Ö∂", "3": "Û∞àπ", "4": "Û∞áÆ", "5": "Óûï",
      "6": "Û∞óö", "7": "Û±íî", "8": "Û∞íö", "9": "Û∞óÉ", "10": "Û∞ìá",
      "urgent": "ÔÅ™", "focused": "ÔÜí", "default": "Û∞Ñõ", "special": "Û∞Ñõ"
    }
  },

  "hyprland/submap": {                    // key-submap indicator
    "format": "<span style=\"italic\">{}</span>"
  },

  "hyprland/window": {                    // active window title
    "format": "{title} [{class}]",
    "rewrite": {
      "(.*) Zen Browser": "huh",
      "(.*) Browser": "",
      "(.*) Mozilla Firefox": "üåé $1"
    },
    "max-length": 60,                      // crop long titles
    "separate-outputs": true,              // per-monitor window
    "tooltip": false                       // disable hover tooltip
  },

  "clock": {                              // date & time
    "timezone": "Europe/Stockholm",
//    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><big>{calendar}</big></tt>",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "format": "{:%Y-%m-%d %H:%M}",
    "format-alt": "{%H:%M}"
  },

  "cpu": {                                // CPU usage
    "format": "CPU {usage}%",
    "tooltip": true
  },

  "memory": {                             // RAM usage
    "format": "MEM {}%"
  },

  "backlight": {                          // screen brightness
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": [
      "Û∞Éö","Û∞Éõ","Û∞Éú","Û∞Éù","Û∞Éû","Û∞Éü","Û∞É†"
    ]
  },

  "network": {                            // network status
    "ipv6": true,
    "format-wifi": "{icon}",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{signalStrength}%",
