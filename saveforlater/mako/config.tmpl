font= "NotoSansM Nerd Font" 9
format=<b>%a ‚èµ</b> %s\n%b
sort=-time
layer=overlay
anchor=top-right
background-color=${BG}${OPAC0_HEX}
width=320
margin=${MGN}
padding=6,6,10
border-size=${BDTHK}
border-color=${BORDER1}${OPAC0_HEX}
